/* banner轮播 */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* nav导航 */
.navContainer{
  display: flex;
}
.navContainer .navItem{
  display: flex;
  width: 20%;
  flex-direction: column;
  align-items: center;
}
.navItem .iconfont{
  color: #fff;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  line-height: 100rpx;
  margin: 20rpx 0;
  font-size: 50rpx;
  text-align: center;
}
.navItem text{
  font-size: 26rpx;
}
/* 推荐歌曲 */

.scrollContainer{
  display: flex;
  margin-top: 20rpx;
  height: 300rpx;
}
.scroll-item{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  margin-right:  20rpx;

}
.scroll-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll-item text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}

/* 排行榜 */
.topListSwiper{
  margin-top: 20rpx;
  height: 450rpx;
}
.topListSwiper .misic-item{
  margin: 20rpx 0;
  display: flex
}
.topListSwiper image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.topListSwiper text{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.topListSwiper .music-name{
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}